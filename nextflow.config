params {
    query = "$PWD/input.fasta"
    dbDir = "$PWD/DB"
    dbName = "blastDB"
    threads = 2
    outDir = "$PWD/out"
    outFileName = "input.blastout"
    outfmt = "'6'"
    options = "-evalue 1e-3"
    app = "blastn"
    chunkSize = 1
}

timeline {
  enabled = true
  file = "$params.outDir/timeline.html"
}

report {
  enabled = true
  file = "$params.outDir/report.html"
}

executor {
  queueSize = 100
  submitRateLimit = '10 sec'
}

profiles {
  slurm { includeConfig './configs/slurm.config' }
}


manifest {
    name = 'christophstach/nextflow_tutorial'
    author = 'Christoph Stach'
    description = 'nextflow bash'
    mainScript = 'main.nf'
    version = '1.0.0'
}